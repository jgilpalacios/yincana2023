function getPathYinkana() {
    var loc = window.location;//alert(JSON.stringify(loc));
    return loc.protocol+'//'+loc.host+'/';
}
document.getElementById('url').innerHTML=getPathYinkana();
function limpiar(){ 
    document.body.innerHTML=document.body.innerHTML.split('<div>cortamos por aqui</div>')[0]; 
}
